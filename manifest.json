{
  "manifest_version": 3,
  "name": "Shiny - SVG Accessibility Enhancer",
  "version": "1.0.0",
  "description": "Enhances SVG visibility for users with low vision and color blindness",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": [
        "lib/utils.js",
        "content/svg-detector.js",
        "content/svg-enhancer.js",
        "content/content.js"
      ],
      "css": ["styles/injected.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
